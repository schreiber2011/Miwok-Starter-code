<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/memonic_image_view"
        style="@style/ImageStyle"
        android:contentDescription="@string/memonic_image" />

    <LinearLayout
        android:id="@+id/layout_texts"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/memonic_image_view"
        android:layout_toRightOf="@+id/memonic_image_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/miwok_text_view"
            style="@style/WordStyle"
            android:gravity="bottom"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/default_text_view"
            style="@style/WordStyle"
            android:gravity="top"/>
    </LinearLayout>

    <ImageView
        style="@style/IndicatorStyle"
        android:contentDescription="@string/play_button"
        app:srcCompat="@drawable/ic_play_arrow_white_24dp" />
</RelativeLayout>