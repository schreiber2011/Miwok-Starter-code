<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="actionBarStyle">@style/MiwokAppBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Estilo da barra do aplicativo -->
    <style name="MiwokAppBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- Remove a sombra abaixo da barra do aplicativo -->
        <item name="elevation">0dp</item>
    </style>

    <!-- Estilo para uma aba que mostra uma categoria de nome -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- AparÃªncia do estilo do texto para uma categoria de aba -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>

    <!-- Style for a image of list of words -->
    <style name="ImageStyle">
        <item name="android:layout_width">@dimen/image_item_width</item>
        <item name="android:layout_height">@dimen/image_item_height</item>
        <item name="android:background">@color/tan_background</item>
    </style>
    <!-- Style for a text of list of words -->
    <style name="WordStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/activity_16dp_margin</item>
        <item name="android:textColor">@color/category_menu_item</item>
        <item name="android:textSize">@dimen/menu_item_size</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="IndicatorStyle">
        <item name="android:layout_alignParentEnd" tools:ignore="NewApi">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_height">@dimen/indicator_dimens</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/margin_right</item>
        <item name="android:layout_marginRight">@dimen/margin_right</item>
        <item name="android:layout_width">@dimen/indicator_dimens</item>

    </style>

</resources>
